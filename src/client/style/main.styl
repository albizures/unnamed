md-list-item.active
  background #303F9F
  color white
.model-teeth
  .content-model
    width 400px
    height 400px
    position relative
    .content-areas
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      .area
        position absolute
        border 0
        background transparent
        outline 0
        &:hover
          background rgba(0, 0, 100, 0.3)
    img
      top 0
      left 0
      position absolute

md-toolbar.md-table-toolbar
  form
    margin-left: 16px;
    & > input
      width 100%
      margin 0
      border none
      color rgba(0, 0, 0, 0.87)
      &:focus 
        outline none
  .ng-hide 
    display none

  &.alternate 
    .md-toolbar-tools
      color: #1e88e5;
      font-size: 16px;
      justify-content: space-between
      background-color: #e3f2fd;

.nav-bar
  md-toolbar
    min-height auto
  .session
    border-bottom 1px solid rgba(0,0,0,0.12)
    button
      margin 0